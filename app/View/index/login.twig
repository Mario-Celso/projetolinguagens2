<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>LEOZ</title>
    <link href="/template/v1/@fortawesome/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="/template/v1/ionicons/css/ionicons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/template/v1/assets/css/dashforge.css">
    <link rel="stylesheet" href="/template/v1/assets/css/dashforge.auth.css">
</head>
<body>

<header class="navbar navbar-header navbar-header-fixed">
    <a href="#" id="mainMenuOpen" class="burger-menu"><i data-feather="menu"></i></a>
    <div class="navbar-brand">
        <a href="#" class="df-logo">LEOZ</a>
    </div><!-- navbar-brand -->

</header><!-- navbar -->

<div class="content content-fixed content-auth">
    <div class="container">
        <div class="media align-items-stretch justify-content-center ht-100p pos-relative">
            <div class="media-body align-items-center d-none d-lg-flex">
                <div class="mx-wd-600">
{#                    <img src="logo.png" class="img-fluid" alt="">#}
                </div>
            </div><!-- media-body -->
            <form class="form-horizontal m-t-20" action="/login" method="post">
                <div class="sign-wrapper mg-lg-l-50 mg-xl-l-60">
                    <div class="wd-100p">

                        <h3 class="tx-color-01 mg-b-5">Acessar Sistema</h3>
                        <p class="tx-color-03 tx-16 mg-b-40">Entre com seus dados para acessar o sistema</p>

                        {% include '/template/flash_message.twig' %}

                        <div class="form-group">
                            <label>Usuário</label>
                            <input type="text" class="form-control" name="email" placeholder="usuário">
                        </div>
                        <div class="form-group">
                            <div class="d-flex justify-content-between mg-b-5">
                                <label class="mg-b-0-f">Senha</label>
                            </div>
                            <input type="password" name="password" class="form-control" placeholder="sua senha">
                        </div>

                        <button class="btn btn-brand-02 btn-block">Entrar</button>
                    </div>
                </div><!-- sign-wrapper -->
            </form>
        </div><!-- media -->
    </div><!-- container -->
</div><!-- content -->

<footer class="footer">
    <div>
        <span>&copy; SOFTZ {{ "now"|date('Y') }}</span>
    </div>
</footer>

<script src="/template/v1/lib/jquery/jquery.min.js"></script>
<script src="/template/v1/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="/template/v1/lib/feather-icons/feather.min.js"></script>
<script src="/template/v1/lib/perfect-scrollbar/perfect-scrollbar.min.js"></script>

<script src="/template/v1/assets/js/dashforge.js"></script>

<!-- append theme customizer -->
<script src="/template/v1/lib/js-cookie/js.cookie.js"></script>
<script src="/template/v1/assets/js/dashforge.settings.js"></script>
<script>
    $(function(){
        'use script'

        window.darkMode = function(){
            $('.btn-white').addClass('btn-dark').removeClass('btn-white');
        }

        window.lightMode = function() {
            $('.btn-dark').addClass('btn-white').removeClass('btn-dark');
        }

        var hasMode = Cookies.get('df-mode');
        if(hasMode === 'dark') {
            darkMode();
        } else {
            lightMode();
        }
    })
</script>
</body>
</html>
