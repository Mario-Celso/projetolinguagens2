{% extends "/template/administrator/template.twig" %}

{% block content %}

    {% include '/template/flash_message.twig' %}
    <form action="{{ url_for("manager.user.put", {'hash_user' : user.hash}) }}" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="form-group col-md-4 form-group-default-select2">
                <label>Nome</label>
                <input type="text" class="form-control" name="name" id="name" value="{{ user.name }}">
            </div>
            <div class="form-group col-md-4 form-group-default-select2">
                <label>E-mail</label>
                <input type="text" class="form-control" name="email" id="email" value="{{ user.email }}">
            </div>

            <div class="col-md-4">
                <div class="form-group mb-20">
                    <label>Status</label>
                    <select class="custom-select select2-test" required="" name="status">
                        <option  value="1" {% if user.status == 1 %} selected="selected" {% endif %}>
                            Ativo
                        </option>
                        <option value="0" {% if user.status == 0 %} selected="selected" {% endif %} >
                            Desativado
                        </option>
                    </select>
                </div>
            </div>
        </div>
        <div style="text-align: right;">
            <button type="submit" class="btn btn-lg btn-primary">Salvar</button>
        </div>


    </form>

{% endblock %}