{% extends "/template/template.twig" %}

{% block title %} - Dashboard{% endblock %}


{% block content %}

    <form action="/system/safe_company/update/{{ safeCompany.getHash }}" method="post" enctype="multipart/form-data">

        <div class="d-sm-flex align-items-center justify-content-between mg-b-20 mg-lg-b-25 mg-xl-b-30">
            <div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb breadcrumb-style1 mg-b-10">
                        <li class="breadcrumb-item"><a href="#">CAPUTO</a></li>
                        <li class="breadcrumb-item"><a href="#">Cia Seguro</a></li>
                        <li class="breadcrumb-item"><a href="#">Formulário</a></li>
                    </ol>
                </nav>
                <h4 class="mg-b-0 tx-spacing--1">Formulário do Cia Seguro</h4>
            </div>

        </div>

        <fieldset class="form-fieldset">
            <legend>Informações Gerais</legend>
            <div class="form-row">
                <div class="form-group form-group-default col-md-12 form-group-default-select2">
                    <label>Seguradora</label>
                    <input value="{{ safeCompany.insurer }}" type="text" class="form-control" name="insurer">
                </div>
                <div class="form-group col-md-3">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label>Status</label>
                    <select class="custom-select" required="" name="status">
                        <option{% if policy.getInsuranceCompany == 2 %} selected {% endif %} value='1'>Ativo</option>
                        <option{% if policy.getInsuranceCompany == 5 %} selected {% endif %} value='0'>Desativo</option>

                    </select>
                </div>
            </div>
        </fieldset>

        <br>
        <div class="row">
            <div class="col-lg-12 text-right">
                <button class="btn btn-lg btn-primary">Salvar Cia Seguro</button>
            </div>
        </div>

    </form>

{% endblock %}